# ============================================================================
# SSO / OIDC Configuration
# ============================================================================
SSO_ID=your_sso_client_id
SSO_SECRET=your_sso_client_secret
OIDC_BASE=https://your-oidc-provider.com
OIDC_ISSUER=https://your-oidc-provider.com

# Callback URL (use https:// if SSL is enabled)
CALLBACK_URL=https://localhost:5002/callback

# Frontend URL (optional, auto-detected from request headers)
FRONTEND_URL=https://localhost:3000

# ============================================================================
# Security & Session Configuration
# ============================================================================
SESSION_SECRET=your_random_session_secret_key_here
AUTH_SECRET=your_random_auth_secret_key_here

# Session timeout in hours (default: 24 hours)
SESSION_TIMEOUT_HOURS=24

# ============================================================================
# Server Configuration
# ============================================================================
PORT=5002
NODE_ENV=development

# SSL/TLS Certificate paths (for HTTPS)
SSL_KEYFILE=cert/key.pem
SSL_CERTFILE=cert/cert.pem

# ============================================================================
# Neo4j Graph Database Configuration
# ============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ============================================================================
# Transparent Screen Lock (Windows Only)
# ============================================================================
TRANSPARENT_LOCK_ENABLED=true
TRANSPARENT_LOCK_SOURCE=Transparent Screen Lock
TRANSPARENT_LOCK_LOG_TYPE=Application
